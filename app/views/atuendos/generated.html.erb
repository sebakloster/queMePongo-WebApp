<section class="section-wrapper area">
  <div class="container pt-5">
    <div class="row center margin-container">
      <div class="container-new-atuendos">
        <h2 class="text-center p-3">Complet√° la info de tu atuendo!</h2>
        <%= form_for @atuendo, :url => { :action => "update" , :id => @atuendo.id}, :method => :put do |f| %>
          <div class="row center form-group m-3">
            <%= f.label :nombre, {:class => 'm-3 '} %>
            <%= f.text_field :nombre %>
          </div>
          <div class="etiquetas row form-group">
            <div class="col-md-4">
              <%= f.label :etiqueta_estacion %><br />
              <%= f.select(:etiqueta_estacion, options_for_select(Atuendo.etiqueta_estacions.keys.to_a),{required:
        false, :prompt => "seleccione"}, {:class => 'form-control'})%>
            </div>
            <div class="col-md-4">
              <%= f.label :etiqueta_tiempo %><br />
              <%= f.select(:etiqueta_tiempo,
        options_for_select(Atuendo.etiqueta_tiempos.keys.to_a),{required: false,
        :prompt => "seleccione"}, {:class => 'form-control'})%>
            </div>
            <div class="col-md-4">
              <%= f.label :etiqueta_formalidad %><br />
              <%= f.select(:etiqueta_formalidad,
        options_for_select(Atuendo.etiqueta_formalidads.keys.to_a),{required:
        false, :prompt => "seleccione"}, {:class => 'form-control'})%>
            </div>
          </div>
          <div class="desc-rating row form-group">
            <div class="descripcion col-md-6">
              <%= f.label :descripcion %> <%= f.text_area(:descripcion, {:class => 'form-control'}) %>
            </div>
            <div class="puntaje col-md-6 star-rating">
              <%= f.label :puntaje %><br />
              <fieldset class="star-edit">
                <%= f.radio_button :puntaje, 5 , {id: "star5"}%> <%= label_tag(:star5, "5 star") %>
                <%=f.radio_button :puntaje, 4, {id: "star4"} %> <%= label_tag(:star4, "4 star") %>
                <%= f.radio_button :puntaje, 3, {id: "star3"} %><%= label_tag(:star3, "3 star") %>
                <%=f.radio_button :puntaje, 2, {id: "star2"}%> <%= label_tag(:star2, "2 star") %>
                <%= f.radio_button :puntaje, 1, {id: "star1"} %><%= label_tag(:star1, "1 star") %>
              </fieldset>
            </div>
          </div>
          <div>
            <p class="container-btn-default">
              <%= f.submit "Completar informacion", :class=>'btn btn-default' %>
            </p>
          </div>
        <% end %>
      </div>
      <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
  </div>
</section>
