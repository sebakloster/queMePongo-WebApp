<div class=" margin-container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Guardarropa</li>
            <li class="breadcrumb-item">Prendas</li>
            <li class="breadcrumb-item" aria-current="page">Atuendos</li>
        </ol>
    </nav>
    <div class="row atuendos-wrapper">
        <% if @atuendos.blank?  %>
        <div class="col-sm-12 container-empty">
            <i class="fa fa-exclamation-triangle"></i> <span class="text-center">No hay atuendos</span>
        </div>
        <% else %>
        <% @atuendos.each do |p| %>
        <%= render 'atuendo', atuendo: p %>
        <%end%>
        <%end%>
    </div>
    <div>
        <a href="/guardarropas/<%= @guardarropa.id %>/atuendos/new" class="link-nueva-prenda">
            <i class="fa fa-plus"></i>
        </a>