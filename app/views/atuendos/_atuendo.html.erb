<div class="container">
  <div class="row align-items-center">
    <div class="col d-flex flex-nowrap align-items-center">
      <% if(!atuendo.etiqueta_formalidad.blank?) %>
        <span class="badge badge-secondary">
          <%= atuendo.etiqueta_formalidad.capitalize()%>
        </span>
      <%end%>
      <% if(!atuendo.etiqueta_estacion.blank?) %>
        <span class="badge badge-secondary">
          <%= atuendo.etiqueta_estacion.capitalize()%>
        </span>
      <%end%>
      <% if(!atuendo.etiqueta_tiempo.blank?) %>
        <span class="badge badge-secondary">
          <%= atuendo.etiqueta_tiempo.capitalize()%>
        </span>
      <%end%>
      <div class="star-rating ml-5">
        <fieldset class="star-show p-0">
          <label class="one-star m-0 <%= !atuendo.puntaje.nil? and atuendo.puntaje == 5 ? "star-color" : '' %>"></label>
          <label class="one-star m-0 <%= !atuendo.puntaje.nil? and atuendo.puntaje > 3 ? "star-color" : '' %>"></label>
          <label class="one-star m-0 <%= !atuendo.puntaje.nil? and atuendo.puntaje > 2 ? "star-color" : '' %>"></label>
          <label class="one-star m-0 <%= !atuendo.puntaje.nil? and atuendo.puntaje > 1 ? "star-color" : '' %>"></label>
          <label class="one-star m-0 <%= !atuendo.puntaje.nil? and atuendo.puntaje > 0 ? "star-color" : '' %>"></label>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <% if atuendo.cabeza.blank?  %>
      <div class="col-sm-12 container-empty">
        <i class="fa fa-exclamation-triangle"></i> <span class="text-center">Se elimin贸 esta prenda</span>
      </div>
    <% else %>
      <%= render 'prenda', prenda: atuendo.cabeza %>
    <%end%>
  </div>
  <div class="col-md-3">
    <% if atuendo.torso.blank?  %>
      <div class="col-sm-12 container-empty">
        <i class="fa fa-exclamation-triangle"></i> <span class="text-center">Se elimin贸 esta prenda</span>
      </div>
    <% else %>
      <%= render 'prenda', prenda: atuendo.torso %>
    <%end%>
  </div>
  <div class="col-md-3">
    <% if atuendo.piernas.blank?  %>
      <div class="col-sm-12 container-empty">
        <i class="fa fa-exclamation-triangle"></i> <span class="text-center">Se elimin贸 esta prenda</span>
      </div>
    <% else %>
      <%= render 'prenda', prenda: atuendo.piernas %>
    <%end%>
  </div>
  <div class="col-md-3">
    <% if atuendo.pies.blank?  %>
      <div class="col-sm-12 container-empty">
        <i class="fa fa-exclamation-triangle"></i> <span class="text-center">Se elimin贸 esta prenda</span>
      </div>
    <% else %>
      <%= render 'prenda', prenda: atuendo.pies %>
    <%end%>
  </div>
</div>
