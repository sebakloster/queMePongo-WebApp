<section class="section-form">
  <div class="container-form">
    <div>
      <h2>Edicion de Prenda</h2>
      <%= form_for @prenda, :url => { :action => "update", :id => @prenda.id }, :method => :put do |f| %>
        <p  class="form-group">
          <%= f.label :categoria %>
          <%= f.select(:categoria, options_for_select(Prenda.categoria.keys.to_a),required: true, :class => 'form-control')%>
        </p>
        <p class="form-group">
          <%= f.label :tipo %>
          <%= f.select(:tipo, options_for_select(Prenda.tipos.keys.to_a),{required: true}, {:class => "form-control"})%>
        </p>
        <p class="form-group">
          <%= f.label :tela %>
          <%= f.select(:tela, options_for_select(Prenda.telas.keys.to_a),{required: true}, {:class => "form-control"})%>
        </p>
         <p class="form-group">
          <%= f.label :color_primario %><br>
          <%= f.color_field :color_primario ,required: true, :class => 'form-control', :id => 'container_color_primario' %>
        </p>
        <p class="form-group">
          <%= f.label :color_secundario %><br>
          <%= f.color_field :color_secundario ,required: true, :class => 'form-control',:id => 'container_color_secundario'%>
        </p>
        <p class="container-btn-default">
          <%= f.submit :class=>'btn  btn-default' %>
        </p>
      <% end %>
    </div>
  </div>
</section>
